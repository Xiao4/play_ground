html, body {margin: 0; padding: 0;-webkit-user-select:none;-ms-user-select:none;overflow: hidden;height: 100%;position: relative;
}
img{border: medium none;
} 
a:link {text-decoration: none;
}
#bg{width: 100%;height: 100%;background-size: 100% auto;background-repeat: no-repeat; transition: -webkit-filter 1s;will-change: -webkit-filter;transform: translateZ(0);}
#bg.blured{
	-webkit-filter: blur(3rem);
}
#banner {position: fixed;box-sizing: border-box;bottom: 0;left:0;width: 100%;padding: 1em;height: 7.9375em;}
#banner:before{content: "";display: block;position: absolute;width: 100%;height: 3.75em;top: -3.75em;left: 0;}
.logo, .btn{-webkit-order: 0;order: 0;-webkit-flex: 0 1 auto;flex: 0 1 auto;-webkit-align-self: auto;align-self: auto;}
.logo {width: 5.9375em;height: 5.9375em;background-repeat: no-repeat;background-size: contain;border-radius: 18%;float: left;}
.text {font-size: 0.875em;line-height: 2rem;margin-left: 6.4375rem;}
.stars{background: transparent url('http://sm.domobcdn.com/ugc/632679.png') no-repeat 0 bottom;background-size: auto 1rem;padding-left: 5rem;margin-left: 6.4375rem;}
.eval{color: #959595;font-size: 0.75em;}
#player{
	position: absolute; top: 0;left: 0;right: 0;bottom: 7.9375em; opacity: 1; will-change: opacity;
	transition: opacity 0.5s;
}
#player.out{opacity: 0;}
#crvideo{display: block;width:100%;position: absolute;top: 50%;left: 0;}
#mute{position: absolute;width: 2em;height: 2em;right: 1em;bottom: 30%;background: rgba(0,0,0,0) url('http://sm.domobcdn.com/ugc/632898.png') no-repeat right center;background-size: 1em auto;}
#mute.un{background-image: url('http://sm.domobcdn.com/ugc/632897.png');}
.btn{width: 2.75rem; height: 1.53125rem;box-sizing: border-box; display: block;-webkit-appearance: none; position: absolute;right: 1rem;bottom: 1.5rem;font-size: 0.75rem;line-height: 1.125rem;border-radius: 3px;border-width: 1px;border-style: solid;text-align: right;padding: 0.25rem;}
.btn:before{content: "+";display: block;position: absolute;left: 0.25rem;top: 0.125rem;line-height: 1em;}

/*theme1*/
.theme1, .theme1 #bg,.theme1 #banner{background-color: #fff;}
.theme1 #banner:before{
	background: -webkit-linear-gradient(top,  rgba(255,255,255, 0) 0%,rgba(255,255,255, 1) 100%);
	background: linear-gradient(to bottom,  rgba(255,255,255, 0) 0%,rgba(255,255,255, 1) 100%);
}
.theme1 .text{color: #1b1b1b;}
.theme1 .btn{color: #0068b7;border-color: #0068b7;}

/*theme2*/
.theme2, .theme2 #bg,.theme2 #banner{background-color: #161513;}
.theme2 #banner:before{
	background: -webkit-linear-gradient(top,  rgba(22,21,19, 0) 0%,rgba(22,21,19, 1) 100%);
	background: linear-gradient(to bottom,  rgba(22,21,19, 0) 0%,rgba(22,21,19, 1) 100%);
}
.theme2 .text{color: #f5bf89;}
.theme2 .btn{color: #f5bf89;border-color: #f5bf89;}

