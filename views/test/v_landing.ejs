$('#banner').addEventListener('click',function(){
	__report(__played?urls.cae:urls.cdp);
	domob.go();
});
$('#bg').addEventListener('click',function(){
	if(__played){
		__report(urls.cae);
		domob.go();
	}
});
document.addEventListener('DOMContentLoaded', function(){
	video.load(); video.play(); //video.pause();
}, false);
